{
  "paths": {
    "/get/{url}": {
      "get": {
        "operationId": "get",
        "summary": "Fetch content from URL",
        "description": "Fetches text content from the specified URL and returns it as plain text. Stores usage statistics.",
        "parameters": [
          {
            "name": "url",
            "in": "path",
            "required": true,
            "description": "The URL to fetch content from (URL encoded)",
            "schema": {
              "type": "string",
              "format": "uri"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Content successfully fetched",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "content": {
                      "type": "string",
                      "description": "The fetched content as plain text"
                    },
                    "tokens": {
                      "type": "integer",
                      "description": "Estimated number of tokens in the content"
                    },
                    "responseTime": {
                      "type": "integer",
                      "description": "Response time in milliseconds"
                    },
                    "contentType": {
                      "type": "string",
                      "description": "Original content type of the response"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Authentication required"
          },
          "400": {
            "description": "Invalid URL"
          }
        }
      }
    },
    "/usage": {
      "get": {
        "operationId": "usage",
        "summary": "Get personal usage statistics",
        "description": "Returns your personal usage statistics including total requests, tokens, and top URLs fetched.",
        "responses": {
          "200": {
            "description": "Usage statistics",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "totalRequests": {
                      "type": "integer",
                      "description": "Total number of requests made"
                    },
                    "totalTokens": {
                      "type": "integer",
                      "description": "Total tokens processed"
                    },
                    "topUrls": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "url": { "type": "string" },
                          "count": { "type": "integer" }
                        }
                      }
                    },
                    "llmsTxtUrls": {
                      "type": "array",
                      "description": "Your /llms.txt URLs accessed",
                      "items": {
                        "type": "object",
                        "properties": {
                          "hostname": { "type": "string" },
                          "url": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Authentication required"
          }
        }
      }
    },
    "/leaderboard": {
      "get": {
        "operationId": "leaderboard",
        "summary": "Get global leaderboard",
        "description": "Returns global usage statistics showing top users and MCP servers by request count.",
        "responses": {
          "200": {
            "description": "Leaderboard data as plain text",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}